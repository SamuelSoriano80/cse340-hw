<h1>Update Account Information</h1>
<!-- Flash Message -->
<% if (locals.notice) { %>
    <div class="notice">
        <p>
            <%= message %>
        </p>
    </div>
    <% } %>

<section class="account-section">
    <h2>Account Information</h2>
    <form action="/account/update" method="post" class="account-form">
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

        <label for="account_firstname">First Name</label>
        <input type="text" id="account_firstname" name="account_firstname" value="<%= accountData.account_firstname %>"
            required pattern="[A-Za-z]+" title="First name should contain only letters">

        <label for="account_lastname">Last Name</label>
        <input type="text" id="account_lastname" name="account_lastname" value="<%= accountData.account_lastname %>"
            required pattern="[A-Za-z]+" title="Last name should contain only letters">

        <label for="account_email">Email</label>
        <input type="email" id="account_email" name="account_email" value="<%= accountData.account_email %>" required>

        <button type="submit" title="Update your account info">Update Account</button>
    </form>
</section>

<!-- ===== Change Password Form ===== -->
<section class="account-section">
    <h2>Change Password</h2>
    <form action="/account/update-password" method="post" class="account-form">
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

        <label for="account_password">New Password</label>
        <span class="note">Passwords must be at least 12 characters and include 1 uppercase, 1 lowercase, 1 number, and
            1 special character.</span>
        <input type="password" id="account_password" name="account_password" required
            pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*]).{12,}$"
            title="At least 12 chars, include 1 uppercase, 1 lowercase, 1 number, 1 special character">

        <button type="submit" title="Change your password">Change Password</button>
    </form>
</section>