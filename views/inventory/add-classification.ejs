<h1>Add New Classification</h1>

<% if (message && message.message) { %>
    <div class="flash-message <%= message.type || 'info' %>">
        <%= message.message %>
    </div>
    <% } %>

        <form action="/inv/add-classification" method="post" class="classification-form">
            <div class="form-group">
                <label for="classification_name">Classification Name:</label>
                <input type="text" id="classification_name" name="classification_name" required pattern="^[a-zA-Z0-9]+$"
                    title="Classification name cannot contain spaces or special characters" <% if (classification_name)
                    { %> value="<%= classification_name %>" <% } %>
                        >
                        <small class="form-text">No spaces or special characters allowed</small>
            </div>

            <% if (errors && errors.classification_name) { %>
                <div class="error-message">
                    <%= errors.classification_name %>
                </div>
                <% } %>

                    <button type="submit" class="btn btn-primary">Add Classification</button>
                    <a href="/inv" class="btn btn-secondary">Cancel</a>
        </form>