<h1>Inventory Management</h1>

<% if (message && message.message) { %>
    <div class="flash-message <%= message.type || 'info' %>">
        <%= message.message %>
    </div>
    <% } %>

        <div class="management-links">
            <div class="management-card">
                <h2>Classification Management</h2>
                <p>Add new vehicle classifications</p>
                <a href="/inv/add-classification" class="btn btn-primary">Add New Classification</a>
            </div>

            <div class="management-card">
                <h2>Vehicle Management</h2>
                <p>Add new vehicles to inventory</p>
                <a href="/inv/add-inventory" class="btn btn-primary">Add New Vehicle</a>
            </div>
        </div>
    
    <div class="management-card">
        <h2>Manage Inventory</h2>
        <p>Choose a classification to see those inventory items</p>
        <div class="form-group">
            <%- classificationSelect %>
        </div>
        <div id="inventoryTableContainer">
            <table id="inventoryDisplay" class="inventory-table"></table>
        </div>
    </div>

    <noscript>Javascript must be enabled to use this page.</noscript>

    <script src="../../js/inventory.js"></script>